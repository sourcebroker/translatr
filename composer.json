{
  "name": "sourcebroker/translatr",
  "type": "typo3-cms-extension",
  "description": "Allows to create translation labels in BE module",
  "license": [
    "GPL-2.0-or-later"
  ],
  "require": {
    "php": "^7.2",
    "typo3/cms-core": "^9.5 || ^10.4",
    "fluidtypo3/vhs": "^5.0 || ^6.0"
  },
  "autoload": {
    "psr-4": {
      "SourceBroker\\Translatr\\": "Classes/"
    }
  },
  "replace": {
    "sourcebroker/translatr": "self.version",
    "typo3-ter/translatr": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web",
      "extension-key": "translatr"
    }
  }
}
